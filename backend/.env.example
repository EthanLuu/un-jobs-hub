# Database Configuration
# For local development (SQLite)
DATABASE_URL=sqlite:///./test.db

# For production with Neon (recommended)
# DATABASE_URL=postgresql+asyncpg://user:password@host/database

# Example Neon connection:
# DATABASE_URL=postgresql+asyncpg://neondb_owner:password@ep-xxxxx.c-2.us-east-1.aws.neon.tech/neondb

# Application Settings
APP_NAME=UNJobsHub API
APP_VERSION=1.0.0
DEBUG=False

# Security Keys (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
# For local development
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# For production (update with your actual domain)
# ALLOWED_ORIGINS=https://un-jobs-hub.vercel.app,http://localhost:3000

# Redis (optional, for caching and Celery)
# REDIS_URL=redis://localhost:6379/0

# Celery (for background tasks)
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# OpenAI API (optional, for AI-powered features)
# OPENAI_API_KEY=sk-...

# Email Settings (optional, for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@unjobshub.com

# File Upload Settings
# UPLOAD_DIR=./uploads
# MAX_UPLOAD_SIZE=5242880  # 5MB in bytes
